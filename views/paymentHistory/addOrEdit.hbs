<h3>{{title}}</h3>
<div class="text-danger">{{insertUpdateError}}</div>
<form action="/paymenthistory/create" method="POST">
    <input type="hidden" name="id" value="{{item._id}}">
    <div class="form-group">
        <label>Payment Id <span style="color: red;">*</span></label>
        <input type="text" class="form-control" name="_id" placeholder="Payment Id" value="{{item._id}}">
        <div class="text-danger">{{item.idError}}</div>
    </div>
    <div class="form-group">
        <label>Contract Id</label>
        <input type="text" class="form-control" name="contractId" placeholder="Contract Id" value="{{item.contractId}}">
        <div class="text-danger">{{item.contractIdError}}</div>
    </div>
    <div class="form-group">
        <label>Description <span style="color: red;">*</span></label>
        <input type="text" class="form-control" name="description" placeholder="Description" value="{{item.description}}">
        <div class="text-danger">{{item.descriptionError}}</div>
    </div>
    <div class="form-group">
        <label>Value <span style="color: red;">*</span></label>
        <input type="text" class="form-control" name="value" placeholder="Value" value="{{item.value}}">
        <div class="text-danger">{{item.valueError}}</div>
    </div>
    <div class="form-group">
        <label>Time <span style="color: red;">*</span></label>
        <input type="text" class="form-control" name="time" placeholder="Format 2020-04-29 13:12:10" value="{{item.time}}">
        <div class="text-danger">{{item.timeError}}</div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/paymenthistory/list"><i class="fa fa-list-alt"></i> View All Payments</a>
    </div>
</form>